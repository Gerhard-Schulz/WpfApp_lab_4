<Window x:Class="WpfApp_lab_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_lab_4"
        mc:Ignorable="d"
        Title="4.1" Height="800" Width="1500" >
    <Grid x:Name="grid">
        <Canvas Name="DrawingTarget" Background="Transparent"
        MouseLeftButtonDown="DrawingMouseDown" 
        Margin="0,43,-0.4,0"/>
        <RadioButton x:Name="NonzeroRB" Content="Nonzero" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,10,0,0" Checked="NonzeroRB_Checked"/>
        <RadioButton x:Name="evenOddRB" Content="EvenOdd" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,10,0,0" IsChecked="True" Checked="evenOddRB_Checked"/>
    </Grid>
</Window>
